---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'PostWing – Adds "wings" to your content',
  description:
    'PostWing is your AI-powered co-pilot for Threads, Twitter, and LinkedIn. Plan, post, and auto-engage with your audience—without lifting a finger.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="You create, we fly."
    title="Your AI-powered co-pilot for Threads, Twitter & LinkedIn"
    subtitle="Plan, post, and auto-engage with your audience — without lifting a finger."
    actions={[
      {
        variant: 'primary',
        text: 'Join the Waitlist',
        href: '#waitlist',
        icon: 'tabler:send',
      },
      {
        text: 'How it works',
        href: '#features',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=2069&q=80',
      alt: 'Flying paper airplane symbolizing automated content',
    }}
  />

  <!-- Call To Action -->
  <CallToAction
    title="Join the Waitlist"
    subtitle="Be among the first to experience PostWing. Sign up now to get exclusive updates and early access."
    actions={[
      {
        variant: 'primary',
        text: 'Get Early Access',
        href: '#',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
